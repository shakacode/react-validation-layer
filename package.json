{
  "name": "react-validation-layer",
  "version": "0.0.5",
  "description": "Form validation layer for every React based app",
  "author": "Alex Fedoseev <alex.fedoseev@gmail.com> (https://github.com/alexfedoseev)",
  "license": "MIT",
  "main": "./lib/index.js",
  "engines": {
    "node": ">=4.2.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/shakacode/react-validation-layer.git"
  },
  "bugs": {
    "url": "https://github.com/shakacode/react-validation-layer/issues"
  },
  "scripts": {
    "start": "npm run clean && npm run dev",
    "dev": "babel --watch --out-dir lib src",
    "build": "babel --out-dir lib src",
    "lint": "eslint --ext .js,.jsx .",
    "test": "mocha --compilers js:babel-register --recursive",
    "clean": "rm -rf lib",
    "check": "npm run lint && npm run test",
    "prerelease": "npm run check && npm run clean && npm run build",
    "preversion": "npm run prerelease",
    "prepublish": "npm run prerelease",
    "release:patch": "scripts/release patch",
    "release:minor": "scripts/release minor",
    "release:major": "scripts/release major"
  },
  "keywords": [
    "react",
    "forms",
    "validation",
    "flux",
    "redux"
  ],
  "devDependencies": {
    "babel-cli": "^6.6.4",
    "babel-core": "^6.6.0",
    "babel-plugin-check-es2015-constants": "^6.5.0",
    "babel-plugin-transform-class-properties": "^6.6.0",
    "babel-plugin-transform-es2015-arrow-functions": "^6.5.2",
    "babel-plugin-transform-es2015-block-scoped-functions": "^6.5.0",
    "babel-plugin-transform-es2015-block-scoping": "^6.6.0",
    "babel-plugin-transform-es2015-classes": "^6.6.0",
    "babel-plugin-transform-es2015-computed-properties": "^6.5.2",
    "babel-plugin-transform-es2015-destructuring": "^6.6.0",
    "babel-plugin-transform-es2015-for-of": "^6.6.0",
    "babel-plugin-transform-es2015-function-name": "^6.5.0",
    "babel-plugin-transform-es2015-literals": "^6.5.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.6.3",
    "babel-plugin-transform-es2015-object-super": "^6.5.0",
    "babel-plugin-transform-es2015-parameters": "^6.6.0",
    "babel-plugin-transform-es2015-shorthand-properties": "^6.5.0",
    "babel-plugin-transform-es2015-spread": "^6.5.2",
    "babel-plugin-transform-es2015-template-literals": "^6.6.0",
    "babel-plugin-transform-object-rest-spread": "^6.5.0",
    "chai": "^3.5.0",
    "eslint": "^2.2.0",
    "eslint-config-shakacode": "^3.0.0",
    "eslint-plugin-react": "^4.2.0",
    "mocha": "^2.4.5",
    "sinon": "^1.17.3"
  }
}
